<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_attention_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_head_img"
        app:shapeAppearanceOverlay="@style/circleImageStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_attention_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="nickname"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/img_attention_avatar"
        app:layout_constraintStart_toEndOf="@id/img_attention_avatar"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_attention_signature"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="ssssssssssss"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@id/img_attention_avatar"
        app:layout_constraintStart_toEndOf="@id/img_attention_avatar"
        android:layout_marginStart="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>